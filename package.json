{
	"name": "comfucius",
	"displayName": "Comfucius",
	"description": "Fake philosophical quotes generator to inspire you while you create fantastic pieces of software (ITALIAN LANGUAGE)",
	"publisher": "VFansss",
	"license": "SEE LICENSE IN LICENCE",
	"repository": {
		"type": "git",
		"url": "https://github.com/VFansss/comfucius-vscode.git"
	},
	"version": "0.9.2",
	"engines": {
		"vscode": "^1.58.0"
	},
	"categories": [
		"Education",
		"Other"
	],
	"icon": "images/icon.png",
	"activationEvents": [
		"*"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [

		],
		"configuration": {
			"title": "Comfucius",
			"properties": {
				"comfucius.timeDelay": {
					"type": "number",
					"scope": "application",
					"default": 2,
					"description": "Time (in seconds) before retrieving showing the phrase again"
				},
				"comfucius.startScrollDelay": {
					"type": "number",
					"scope": "application",
					"default": 5,
					"description": "How long to wait (in seconds) before starting scrolling the phrase on the status bar"
				},
				"comfucius.scrollPerCharacter": {
					"type": "number",
					"scope": "application",
					"default": 0.2,
					"description": "Delay used for 'trimming' the phrase on the status bar when scrolling the text"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.58.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"node-fetch": "^2.6.1"
	}
}
